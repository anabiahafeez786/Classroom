<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ðŸ“¸ CAMERA PERMISSION FOR QR SCANNER -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- ðŸ”” INTERNET REQUIRED FOR FCM -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- ðŸ“¸ CAMERA FEATURE (TO AVOID WARNING) -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Classroom">

        <!-- ðŸ”” FIREBASE CLOUD MESSAGING SERVICE (REQUIRED) -->
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- ðŸ” AUTH / ACCOUNT -->
        <activity android:name=".SignupActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".ForgotPasswordActivity" />

        <!-- ðŸ  MAIN / HOME -->
        <activity android:name=".ProductActivity" />

        <!-- ðŸ“š OTHER SCREENS -->
        <activity android:name=".JoinClassActivity" />
        <activity android:name=".CreateClassActivity" />
        <activity android:name=".DataReceiveActivity" />
        <activity android:name=".DataSendActivity" />
        <activity android:name=".ColorFragmentsActivity" />

        <!-- ðŸ“· QR SCANNER -->
        <activity android:name=".QrScanActivity" />
        <activity android:name=".CustomCaptureActivity" />

        <!-- ðŸ’¬ CHAT -->
        <activity android:name=".ChatActivity" />

        <!-- ðŸ“¢ ADMOB -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

        <!-- ðŸš€ SPLASH (LAUNCHER) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
